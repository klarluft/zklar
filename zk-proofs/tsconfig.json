{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es7"],
    "types": ["node", "jest"],
    "outDir": "build",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "build", "src/memo/*.json"]
}
